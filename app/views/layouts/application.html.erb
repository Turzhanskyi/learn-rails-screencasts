<!DOCTYPE html>
<html>
  <head>
    <title>LearnRailsScreencasts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if user_signed_in? %>
    <span>Вітаю, <%= current_user.email %></span>
    <%= link_to 'Вийти', destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to 'Увійти', new_user_session_path %> або <%= link_to 'Зареєструватися', new_user_registration_path %>
  <% end %>

  <%= yield %>
  </body>
</html>
